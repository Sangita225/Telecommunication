<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/dimage"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/dfullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dimage"
                android:text="Full Name"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/daddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dfullname"
                android:text="Address"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/dgender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/daddress"
                android:text="Gender"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/dhospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dgender"
                android:text="Hospital/Clinic"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/dspeciality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dhospital"
                android:text="Speciality"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/dexperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dspeciality"
                android:text="Experience"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/dusertype"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textAlignment="center"
                android:layout_below="@+id/dexperience"
                android:visibility="gone"
                android:textColor="#000"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>